<section id="registrationPage">
  <div class="container p-5">
    <div class="row mt-5">
      <div class="col-lg-8 offset-lg-2">
        <div class="card bg-light">
          <div class="card-body">
            <h4 class="text-center">Add Project</h4>
            <hr>
            <form action="/companyOwner/addproject" method="post">
              <div class="form-group">
                <label class="form-control-label">Project Name</label>
                <input type="text" name="projectName" class="form-control">
              </div>
              <div class="form-group">
                <label class="form-control-label">Start Date</label>
                <input type="date" name="startDate" class="form-control">
              </div>
              <div class="form-group">
                <label class="form-control-label">End Date</label>
                <input type="date" name="endDate" class="form-control">
              </div>
              <select class="custom-select" name="projectManagerId">
                <option selected>Select Manager Of project</option>
                {{#each users}}
                <option value="{{this._id}}">{{this.fname}}</option>
                {{/each}}
              </select>
              <hr>
              <button type="submit" class="btn btn-primary btn-block">Add Project</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
